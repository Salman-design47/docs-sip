---
/**
 * Integrations section showing supported chains/protocols
 */

const integrations = [
  { name: 'NEAR', href: '/integrations/near-intents/', desc: 'Intents settlement' },
  { name: 'Zcash', href: '/integrations/zcash/', desc: 'Privacy execution' },
  { name: 'Ethereum', href: '/concepts/stealth-address/', desc: 'EVM chains' },
  { name: 'Solana', href: '/concepts/stealth-address/', desc: 'High-speed' },
]
---

<section class="integrations-section">
  <h2 class="section-title">Integrations</h2>
  <p class="section-subtitle">Works with your existing infrastructure</p>

  <div class="integrations-grid">
    {integrations.map(i => (
      <a href={i.href} class="integration-card">
        <span class="integration-name">{i.name}</span>
        <span class="integration-desc">{i.desc}</span>
      </a>
    ))}
  </div>

  <p class="coming-soon">
    More chains coming: Bitcoin, Cosmos, Move chains...
  </p>
</section>

<style>
  .integrations-section {
    padding: 4rem 1.5rem;
    text-align: center;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--sl-color-white);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--sl-color-gray-3);
    margin: 0 0 2.5rem;
  }

  .integrations-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto 1.5rem;
  }

  .integration-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    min-width: 140px;
  }

  .integration-card:hover {
    transform: translateY(-2px);
    background: rgba(139, 92, 246, 0.08);
    border-color: rgba(139, 92, 246, 0.2);
  }

  .integration-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--sl-color-white);
    margin-bottom: 0.25rem;
  }

  .integration-desc {
    font-size: 0.75rem;
    color: var(--sl-color-gray-4);
  }

  .coming-soon {
    font-size: 0.85rem;
    color: var(--sl-color-gray-4);
    margin: 0;
    font-style: italic;
  }

  /* Light theme */
  :root[data-theme='light'] .section-title {
    color: var(--sl-color-black);
  }

  :root[data-theme='light'] .integration-card {
    background: rgba(0, 0, 0, 0.02);
    border-color: rgba(0, 0, 0, 0.08);
  }

  :root[data-theme='light'] .integration-card:hover {
    background: rgba(124, 58, 237, 0.05);
    border-color: rgba(124, 58, 237, 0.2);
  }

  :root[data-theme='light'] .integration-name {
    color: var(--sl-color-black);
  }

  @media (max-width: 600px) {
    .integrations-grid {
      flex-direction: column;
      align-items: center;
    }

    .integration-card {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
